<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grubit.dannykevin.foodapp.MainActivity3"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2000sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ff99d9ea"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:fillViewport="true"
        android:weightSum="1">


            <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grubit_nearby_title22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:id="@+id/textView"
                android:layout_below="@+id/imageButton4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="onClick1"
                android:textColor="#ffffff" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
                android:clickable="true"
                android:onClick="onClick1"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/phone1"
                android:background="#ff89c3d2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:id="@+id/direct1"
            android:background="#ff89c3d2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/review1"
            android:layout_weight="0.7"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line"
            android:layout_weight="0.59" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:id="@+id/textView3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
                android:clickable="true"
                android:onClick="onClick2"
            android:textColor="#ffffff" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textView4"
        android:textSize="25sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
                android:clickable="true"
                android:onClick="onClick2"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/phone2"
                android:background="#ff89c3d2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:id="@+id/direct2"
            android:background="#ff89c3d2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/review2"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line"
            android:layout_weight="0.59" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
                android:clickable="true"
                android:onClick="onClick3"
            android:textColor="#ffffff" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textView6"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
                android:clickable="true"
                android:onClick="onClick3"
                android:textColor="#ffffff" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/phone3"
            android:background="#ff89c3d2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:id="@+id/direct3"
            android:background="#ff89c3d2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/review3"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line"
            android:layout_weight="0.59" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yelpbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yelp_moreselction" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line"
            android:layout_weight="0.59" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/powered_by_yelp_white"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageView4"
                android:layout_alignEnd="@+id/imageView4"
                android:layout_gravity="right" />

    </LinearLayout>


    </ScrollView>
